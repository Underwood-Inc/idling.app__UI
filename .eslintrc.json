{
  "extends": ["next", "next/core-web-vitals", "prettier", "eslint:recommended"],
  "plugins": ["prettier", "jest"],
  "globals": {
    "React": "readonly"
  },
  "env": {
    "jest/globals": true
  },
  "overrides": [
    {
      "files": ["*.stories.@(ts|tsx|js|jsx|mjs|cjs)"]
    }
  ],
  "rules": {
    "max-len": ["error", { "code": 130 }],
    "no-unused-vars": "warn",
    "no-console": [
      "error",
      {
        "allow": ["info", "warn", "error"]
      }
    ]
  }
}
